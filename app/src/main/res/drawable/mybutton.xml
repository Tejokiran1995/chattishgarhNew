<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#77949e" />
            <gradient android:angle="-90" android:startColor="#6496a9" android:endColor="#68879a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7e9aab" />
            <solid android:color="#587285"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#bfe3f2" />
            <gradient android:angle="-90" android:startColor="#95bccc" android:endColor="#88bfdc" />
        </shape>

    </item>

</selector>